<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".GameView" >
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Assassin's Creed Origins"
                android:textSize="21dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/view_game_sous_categorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textStyle="italic"
                    android:text="2010-2019"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text=" - "
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/view_game_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:text="Fantastique"
                    android:textSize="16dp"/>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/view_game_categorie_image"
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="75dp"
                    app:srcCompat="@drawable/pc" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Détails"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Développeur : "
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/view_game_developpeur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NC"
                    android:gravity="right"
                    android:textColor="@color/colorAccent"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editeur : "
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/view_game_editeur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubisoft"
                    android:gravity="right"
                    android:textColor="@color/colorAccent"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Année : "
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/view_game_annee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2017"
                    android:gravity="right"
                    android:textColor="@color/colorAccent"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantité : "
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/view_game_quantite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="right"
                    android:textColor="@color/colorAccent"
                    android:textSize="17dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="240dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/view_game_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/cod" />

    </LinearLayout>
</LinearLayout>